mixin character(data)
  - const yearClasses = data.world === 'adam' ? 'bg-white black' : 'bg-black white '
  .w-card.h-card
    .relative.h-100p.gill
      +img.w-100p.h-100p.object-cover.rounded(src=data.picture)
      .absolute.top-0.right-0.px-1.py-01.bg-opacity-90p.text-5.rounded-bl(class=yearClasses)=data.year
      a.absolute.bottom-0.left-0.right-0.p-1.bg-opacity-75p.bg-white(href=data.wikiUrl)
        .flex.flex-row.justify-center.items-center
          .text-5.bold.black
            .inline-block=data.firstName
            .inline-block.uppercase.pl-02=data.lastName
      //- .text-2=data.time
